<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.college.yi.bookmanager.repository.UserRepository">
    
    <resultMap id="UserResultMap" type="com.college.yi.bookmanager.entity.UserEntity">
    <result column="id" property="id"/>
    <result column="username" property="username"/>
    <result column="password" property="password"/>
    <result column="role" property="role"/>
    <result column="enabled" property="enabled"/>
    
    </resultMap>
    
   
    
    <select id="findByUsername" parameterType="String"
            resultType="com.college.yi.bookmanager.entity.UserEntity">
    SELECT id, username, password, role, enabled FROM users WHERE username = #{username}
    </select>
    
    <insert id="insert" parameterType="com.college.yi.bookmanager.entity.UserEntity">
    INSERT INTO users (id, username, password, role, enabled)
    VALUES (#{id}, #{username}, #{password}, #{role}, #{enabled})
    </insert>
    
    <update id="update" parameterType="com.college.yi.bookmanager.entity.UserEntity">
        UPDATE users
    SET id = #{id}, username = #{username},password = #{password}, role = #{role},
            enabled = #{enabled}, stock = #{stock}
    </update>
    
     <delete id="delete" parameterType="long">
        DELETE FROM users WHERE id = #{id}
    </delete>
</mapper>

    